<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:padding="10dp" >
    <ImageView
        android:id="@+id/iv_fans_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_contact_picture" />

   	<TextView
   	    android:id="@+id/tv_fans_name"
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
   	    android:layout_alignBottom="@+id/iv_fans_avatar"
   	    android:layout_marginBottom="18dp"
   	    android:layout_toRightOf="@+id/iv_fans_avatar"
   	    android:singleLine="true"
   	    android:textColor="#2e2e2e"
   	    android:layout_marginLeft="10dp"
   	    android:layout_marginRight="65dp"
   	    android:textSize="18sp" />

   	<TextView
   	    android:id="@+id/tv_fans_info"
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
   	    android:layout_alignBottom="@+id/iv_fans_avatar"
        android:textColor="#C2C2C2"
   	    android:layout_alignLeft="@+id/tv_fans_name" />

   	<TextView
   	    android:id="@+id/tv_fans_operation"
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
   	    android:layout_above="@+id/tv_fans_info"
        android:textColor="#445bc8"
   	    android:layout_alignParentRight="true"
   	    android:layout_marginRight="10dp"
   	    android:clickable="true"
   	    android:textSize="15sp" />

</RelativeLayout>
