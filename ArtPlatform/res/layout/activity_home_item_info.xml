<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >

    <com.gexin.artplatform.view.TitleBar
        android:id="@+id/tb_home_item_info"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#445bc8"
        custom:titleColor="#ffffff"
        custom:titleSize="7sp"
        custom:titleText="@string/tab_homepage" >
    </com.gexin.artplatform.view.TitleBar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tb_home_item_info" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/iv_header_home_item_info"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_menu_home" />

            <TextView
                android:id="@+id/tv_name_home_item_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/iv_header_home_item_info"
                android:singleLine="true"
                android:textColor="#445bc8"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_content_home_item_info"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_header_home_item_info"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tv_time_home_item_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/iv_header_home_item_info"
                android:layout_toRightOf="@id/iv_header_home_item_info"
                android:textColor="#959595" />

            <com.gexin.artplatform.view.FlowLayout
                android:id="@+id/fl_pics_home_item_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_content_home_item_info"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/tv_clicknum_home_item_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fl_pics_home_item_info"
                android:layout_marginLeft="10dp"
                android:textColor="#959595" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>