<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ededef"
    android:orientation="vertical" >

    <com.gexin.artplatform.view.TitleBar
        android:id="@+id/tb_activity_find_friend"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#445bc8"
        custom:titleColor="#ffffff"
        custom:titleSize="7sp"
        custom:titleText="发现好友" >
    </com.gexin.artplatform.view.TitleBar>
    
    <SearchView android:id="@+id/sv_activity_find_friend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:iconifiedByDefault="false"
        android:layout_margin="10dp"
        android:queryHint="搜索昵称关键词"></SearchView>
    <ListView android:id="@+id/lv_activity_find_friend"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:scrollbars="none"></ListView>

</LinearLayout>
