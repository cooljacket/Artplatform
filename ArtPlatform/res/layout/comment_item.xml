<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >

    <ImageView
        android:id="@+id/iv_header_comment_item"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_contact_picture" />

    <TextView
        android:id="@+id/tv_name_comment_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/iv_header_comment_item"
        android:textColor="#2e2e2f"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_time_comment_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_header_comment_item"
        android:layout_toRightOf="@id/iv_header_comment_item"
        android:textColor="#8a8a8a" />

    <TextView
        android:id="@+id/tv_content_comment_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_header_comment_item"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="#2e2e2f" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/tv_content_comment_item"
        android:background="#c9c9c9" />

</RelativeLayout>