<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f2f2f3"
    android:orientation="vertical" >

    <com.gexin.artplatform.view.TitleBar
        android:id="@+id/tb_question_info"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#445bc8"
        custom:titleColor="#ffffff"
        custom:titleSize="7sp"
        custom:titleText="@string/tab_question_answer" >
    </com.gexin.artplatform.view.TitleBar>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rl_main_activity_question_info"
                android:background="#ffffff" >

                <ImageView
                    android:id="@+id/iv_header_question_info"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="centerCrop"
                    android:layout_margin="10dp" />

                <TextView
                    android:id="@+id/tv_name_question_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/iv_header_question_info"
                    android:singleLine="true"
                    android:textColor="#445bc8"
                    android:layout_marginRight="70dp"
                    android:textSize="18sp" />

                <LinearLayout
                    android:id="@+id/ll_header_question_info_2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/iv_header_question_info"
                    android:layout_toRightOf="@id/iv_header_question_info"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_time_question_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#8a8a8a" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_content_question_info"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_header_question_info"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textColor="#000000" />

                <ImageView
                    android:id="@+id/iv_pic_question_info"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_below="@id/tv_content_question_info"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:scaleType="centerCrop"/>

                <LinearLayout
                    android:id="@+id/ll_tag_question_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_pic_question_info"
                    android:layout_margin="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/tag_icon" />

                    <TextView
                        android:id="@+id/tv_type_question_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textColor="#8a8a8a" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/ll_tag_question_info"
                    android:background="#c9c9c9" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ll_tag_question_info"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:id="@+id/ll_zan_question_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp" >

                        <ImageView
                            android:id="@+id/iv_zan_question_info"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/zan_icon_1" />

                        <TextView
                            android:id="@+id/tv_zan_question_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:textColor="#8a8a8a"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="20dp"
                        android:background="#000000" />

                    <LinearLayout
                        android:id="@+id/ll_ans_question_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp" >

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/comment_icon" />

                        <TextView
                            android:id="@+id/tv_ans_question_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:textColor="#8a8a8a"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>

                <ImageButton
                    android:id="@+id/ibtn_interest_question_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_margin="10dp"
                    android:background="@null"
                    android:src="@drawable/interest_icon_1" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_area_answer_question_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_answernum_question_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:padding="10dp"
                    android:textColor="#ff0000"
                    android:text="回答" />

                <View android:id="@+id/v_answer_line_activity_question_info"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/ll_tag_question_info"
                    android:background="#c9c9c9" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_area_comment_question_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_commentnum_question_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="评论区"
                    android:background="#ffffff"
                    android:textColor="#ff0000" />

                <View android:id="@+id/v_comment_line_activity_question_info"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/ll_tag_question_info"
                    android:background="#c9c9c9" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/et_comment_question_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="回复楼主"
            android:textColor="#000000" />

        <Button
            android:id="@+id/btn_comment_question_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发送"
            android:textColor="#000000" />
    </LinearLayout>

</LinearLayout>